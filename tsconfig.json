{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2021",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "declaration": true,
    // "emitDeclarationOnly": true, // babel 已经生成js， 这里值生成.d.ts文件即可
    "declarationDir": "./types",
    "exactOptionalPropertyTypes": true, // 可选属性必须赋予明确的值，不可以赋值 undefined
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
  },
  "include": [
    "./src/"
  ],
  "exclude": ["./src/**.d.ts"]
}